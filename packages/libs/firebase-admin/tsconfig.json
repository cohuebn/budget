{
  "include": ["**/*.ts", "**/*.js", "../firebase-config/types.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  }
}
