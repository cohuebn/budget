    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "esbuild": "^0.17.19",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "prettier": "@budget/eslint-config/.prettierrc"
}
